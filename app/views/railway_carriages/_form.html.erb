<%= form_with(model: @railway_carriage.becomes(RailwayCarriage), local: true) do |form| %>
  <%= render 'common/errors', resource: @railway_carriage %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>

  </div>

  <div class ="field">
    <%= form.radio_button :type , CoupeRailwayCarriage.name%> Coupe <br/>
    <%= form.radio_button :type, EconomyRailwayCarriage.name%> Economy<br/>
    <%= form.radio_button :type, HundaiRailwayCarriage.name%> Hundai<br/>
    <%= form.radio_button :type, ComfortRailwayCarriage.name%> Comfort<br/>
    <%= form.text_field :seats_up %> Up seats <br/>
    <%= form.text_field :seats_down %> Down seats<br/>
    <%= form.text_field :side_seats_up %> Up side seats<br/>
    <%= form.text_field :side_seats_down %> Up side seats<br/>
    <%= form.text_field :sitting_seats %> Sitting seats<br/>
  </div>




  <div class="actions">

    <%= form.submit %>
  </div>


<% end %>
